# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=FocusTask
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
